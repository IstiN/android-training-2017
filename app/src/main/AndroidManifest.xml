<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.epam.androidtraining">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".CalcApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">

        </activity>
        <activity android:name=".activities.ViewPagerSampleActivity"
            android:exported="true">

        </activity>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.RecyclerViewSampleActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.epam.androidtraining.provider.CustomContentProvider"
            android:name=".provider.CustomContentProvider"/>
        <service android:name=".services.PlayerService"/>
        <service android:name=".services.CalcService"/>
        <service android:name=".services.CalcIntentService"/>
        <receiver android:name=".receivers.PlayReceiver">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE"/>
            </intent-filter>
        </receiver>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>